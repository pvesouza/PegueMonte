<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/clientname_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.AppCompat.Text"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
      />

    <TextView
        android:id="@+id/clientphone_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Theme.AppCompat.Text"
        android:text="Phone"
        app:layout_constraintStart_toStartOf="@id/clientname_textview"
        app:layout_constraintTop_toBottomOf="@id/clientname_textview"
        />

</androidx.constraintlayout.widget.ConstraintLayout>